<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="banner.brown.ui" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="banner.brown.BannerApplication"
        android:allowBackup="true"
        android:icon="@drawable/course_cub"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >


            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseDetail"
            android:label="@string/title_activity_course_detail" >
        </activity>

        <activity
            android:name=".CourseListActivity"
            android:label="@string/title_activity_course_list" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Please Log In"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name=".BannerWebActivity"
            android:label="Web" >
        </activity>
        <activity
            android:name=".MapBannerWebActivity"
            android:label="Web" >
        </activity>
        <activity
            android:name=".BannerBaseLogoutTimerActivity"
            android:label="@string/title_activity_banner_base_logout_timer" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
