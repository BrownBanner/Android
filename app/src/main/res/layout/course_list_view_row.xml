<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="10dp"
    android:layout_marginLeft="16dp"
    android:id="@+id/course_list_row_background"
    android:weightSum="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:id="@+id/listViewAbbreviation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/BannerTitle"
            android:text="CSCI"
                android:layout_column="6" />

            <TextView android:id="@+id/courseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/BannerBody2"
                    android:text="CSCI"
                android:layout_gravity="right"
                android:layout_weight="0.02"
                android:layout_column="40"
                android:autoText="false"
                android:textColor="@color/bannerBrown" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>
    </TableLayout>

    <TextView android:id="@+id/listViewTitle"
    android:layout_width = "wrap_content"
    android:layout_height="wrap_content"
    android:text="Class name"
    style="@style/BannerBody1"
    android:layout_marginTop="5dp"

        android:layout_column="6"
        android:layout_span="35"
        android:layout_weight="0.02" />

</LinearLayout>