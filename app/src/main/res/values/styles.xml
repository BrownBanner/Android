<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
        <item name="colorPrimary"> @color/bannerBrown</item>
        <item name="colorPrimaryDark"> @color/bannerRed</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="BannerDetailSection" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BannerDetailDescriptor" parent="BannerCaption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">3dp</item>

    </style>

    <style name="BannerDetailSubSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/detail_horizontal_padding_descriptor</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BannerDetailSubSectionClickable" parent="BannerDetailSubSection">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BannerDetailChevron" >
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/ic_chevron_right_grey600_24dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="BannerDrawerSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/detail_horizontal_padding_descriptor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BannerDetailSectionImage">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>

        <item name="android:layout_marginRight">16dp</item>


    </style>


    <!--
        These are all the recommended typography attributes in the material design guideline:
        http://www.google.com/design/spec/style/typography.html#typography-standard-styles
    -->

    <style name="BannerDisplay4">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">112sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="BannerDisplay3">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerDisplay2">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerDisplay1">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerHeadline">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerTitle">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="BannerTitleThin">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerSubhead">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerBody2">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="BannerBody1">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BannerCaption">
        <item name="android:textColor">@color/textGray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif</item>
    </style>
    <style name="BannerButton">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
